<resources xmlns:tools="http://schemas.android.com/tools"> <!-- Base application theme. -->
    <style name="Theme.Quokka" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/quokka_400</item>
        <item name="colorPrimaryVariant">@color/quokka_400</item>
        <item name="colorOnPrimary">@color/quokka_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/quokka_600</item>
        <item name="colorSecondaryVariant">@color/quokka_600</item>
        <item name="colorOnSecondary">@color/quokka_600</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Quokka.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Quokka.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Quokka.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_app</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Quokka.NoActionBar</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/logo_project</item>
    </style>

    <!-- BottomSheet -->
    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_rounded_corner</item>
    </style>

    <!-- BottomSheetDialogRound -->
    <style name="BottomDialogRoundStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorControlActivated">@color/gray_h0_8</item>
    </style>
</resources>