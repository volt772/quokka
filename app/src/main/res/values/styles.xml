<resources>
    <style name="QuokkaRecyclerStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingTop">@dimen/md_4</item>
    </style>

    <style name="DocumentDateLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/md_20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- List No Label -->
    <style name="DocumentsEmptyLabel">
        <item name="android:textSize">@dimen/md_16</item>
        <item name="android:textColor">@color/material_gray_500</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
